<div class=" mb-3">

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= asset_path("movie.jpg") %>');">
    <div class="container">
      <h1>Your movie catalogue, organized your way</h1>
      <p>Keep things simple</p>
      <a class="btn btn-flat" href="#">Apply now</a>
    </div>
  </div>
  </div>

<div class="d-flex justify-content-between align-items-center">
  <div class="header display-6">My Movie Lists</div>

  <button type="button"
          class="btn btn-success rounded-lg"
          data-bs-toggle="modal"
          data-bs-target="#staticBackdrop">
    Create a list +
  </button>
</div>


  <div class="container">
    <div class="cards">
      <% @lists.each do |l| %>
      <%= link_to list_path(l), class: "text-decoration-none" do %>
      <div class="card-category mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= l.photo.attached? ? cl_image_path(l.photo.key) : image_path('https://ducunl0s4svtl.cloudfront.net/wp-content/uploads/2017/10/flat-clapperboard-icon_1063-38.jpg') %>)">
        <%= l.name %>
      </div>
      <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<!-- Modal -->
<div class="modal fade" id="staticBackdrop"
     data-bs-backdrop="static"
     data-bs-keyboard="false"
     tabindex="-1"
     aria-labelledby="staticBackdropLabel"
     aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">New List</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">

        <%= simple_form_for @list, html: { multipart: true } do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs d-flex flex-column gap-3">
            <%= f.input :name, input_html: { class: "form-control" } %>
            <%= f.input :photo, as: :file %>
          </div>

          <div class="form-actions mt-3">
            <%= f.button :submit, class: "btn btn-primary w-100" %>
          </div>
        <% end %>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary"
                data-bs-dismiss="modal">
          Cancel
        </button>
      </div>

    </div>
  </div>
</div>
